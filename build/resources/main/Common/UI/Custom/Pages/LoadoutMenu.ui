@LoadoutButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@WarriorButtonStyle = TextButtonStyle(
  Default: (Background: #c0392b, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #e74c3c, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #a93226, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@ArcherButtonStyle = TextButtonStyle(
  Default: (Background: #27ae60, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2ecc71, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1e8449, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@MageButtonStyle = TextButtonStyle(
  Default: (Background: #8e44ad, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #9b59b6, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #7d3c98, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 13, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 400, Height: 380);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 24);

  Label {
    Text: "SELECT YOUR LOADOUT";
    Anchor: (Height: 40);
    Style: (FontSize: 22, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { Anchor: (Height: 1); Background: #2b3542; }
  Group { Anchor: (Height: 20); }

  TextButton #WarriorButton {
    Text: "WARRIOR - Sword & Shield";
    Anchor: (Height: 50);
    Style: @WarriorButtonStyle;
  }

  Group { Anchor: (Height: 12); }

  TextButton #ArcherButton {
    Text: "ARCHER - Bow & Arrows";
    Anchor: (Height: 50);
    Style: @ArcherButtonStyle;
  }

  Group { Anchor: (Height: 12); }

  TextButton #MageButton {
    Text: "MAGE - Staff & Potions";
    Anchor: (Height: 50);
    Style: @MageButtonStyle;
  }

  Group { Anchor: (Height: 24); }
  Group { Anchor: (Height: 1); Background: #2b3542(0.5); }
  Group { Anchor: (Height: 16); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 40);

    Group { FlexWeight: 1; }

    TextButton #CloseButton {
      Text: "CLOSE";
      Anchor: (Width: 120, Height: 36);
      Style: @CloseButtonStyle;
    }

    Group { FlexWeight: 1; }
  }
}
