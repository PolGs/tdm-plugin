@RedButtonStyle = TextButtonStyle(
  Default: (Background: #c0392b, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #e74c3c, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #a93226, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@BlueButtonStyle = TextButtonStyle(
  Default: (Background: #2980b9, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3498db, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1f6391, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@AutoButtonStyle = TextButtonStyle(
  Default: (Background: #27ae60, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2ecc71, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1e8449, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 13, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 420, Height: 340);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 24);

  Label {
    Text: "TEAM DEATHMATCH";
    Anchor: (Height: 36);
    Style: (FontSize: 24, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { Anchor: (Height: 4); }

  Label {
    Text: "Select your team";
    Anchor: (Height: 24);
    Style: (FontSize: 14, TextColor: #96a9be, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 1); Background: #2b3542; }
  Group { Anchor: (Height: 16); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 80);

    Group { FlexWeight: 1; }

    TextButton #RedButton {
      Text: "RED TEAM";
      Anchor: (Width: 150, Height: 70);
      Style: @RedButtonStyle;
    }

    Group { Anchor: (Width: 20); }

    TextButton #BlueButton {
      Text: "BLUE TEAM";
      Anchor: (Width: 150, Height: 70);
      Style: @BlueButtonStyle;
    }

    Group { FlexWeight: 1; }
  }

  Group { Anchor: (Height: 12); }

  Label #TeamCounts {
    Text: "Red: 0 | Blue: 0";
    Anchor: (Height: 20);
    Style: (FontSize: 12, TextColor: #6e7da1, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 12); }

  TextButton #AutoButton {
    Text: "AUTO-ASSIGN (Recommended)";
    Anchor: (Height: 40);
    Style: @AutoButtonStyle;
  }

  Group { Anchor: (Height: 16); }
  Group { Anchor: (Height: 1); Background: #2b3542(0.5); }
  Group { Anchor: (Height: 12); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 36);

    Group { FlexWeight: 1; }

    TextButton #CloseButton {
      Text: "CLOSE";
      Anchor: (Width: 100, Height: 32);
      Style: @CloseButtonStyle;
    }

    Group { FlexWeight: 1; }
  }
}
